// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato"
  },
  "features": {
    "copilot": false
  },
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_size": 16,
  "ui_font_family": "Hack Nerd Font",
  "ui_font_size": 16,
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  "vim_mode": true,
  "cursor_blink": false,
  "completion_documentation_secondary_query_debounce": 300,
  "use_on_type_format": true,
  "use_autoclose": true,
  "show_copilot_suggestions": false,
  "calls": {
    "mute_on_join": true,
    "share_on_join": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "always",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "vertical_scroll_margin": 999,
  "relative_line_numbers": true,
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 8,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "assistant": {
    "version": "1",
    "enabled": false,
    "button": false
  },
  "autosave": "off",
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true,
    "close_position": "right"
  },
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "on",
  "preferred_line_length": 80,
  "tab_size": 2,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": false,
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**.g.dart"
  ],
  "file_types": {},
  "languages": {
    "Dart": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll": true
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true
  }
}
