[
  {
    "context": "VimControl && !menu",
    "bindings": {
      // put key-bindings here if you want them to work in normal & visual mode
      "space /": [
        "editor::ToggleComments",
        {
          "advance_downwards": false
        }
      ]
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      // put key-bindings here if you want them to work only in normal mode
      "space w": "workspace::Save",
      "space c": "pane::CloseActiveItem",
      "space v": "pane::SplitRight",
      "space h": "pane::SplitDown",
      "space s": [
        "buffer_search::Deploy",
        {
          "replace_enabled": true
        }
      ],
      "space e": "workspace::ToggleLeftDock",
      "space z": "workspace::ToggleCenteredLayout",
      // Language Server Protocol
      "g d": "editor::GoToDefinition",
      "g shift-d": "editor::GoToDeclaration",
      "g r": "editor::FindAllReferences",
      "g shift-i": "editor::GoToImplementation",
      "space l r": "editor::Rename",
      "space l a": "editor::ToggleCodeActions",
      "space a": "editor::ToggleCodeActions",
      "space l f": "editor::Format",
      "space l d": "diagnostics::Deploy",
      "space l j": "editor::GoToDiagnostic",
      "space l k": "editor::GoToPreviousDiagnostic",
      "shift-k": "editor::Hover",
      // Finders
      "space b": "tab_switcher::Toggle",
      "space f b": "tab_switcher::Toggle",
      "space f f": "file_finder::Toggle",
      "space f g": "pane::DeploySearch",
      // Terminal
      "space t": "terminal_panel::ToggleFocus",
      "space g g": [
        "workspace::SendKeystrokes",
        ": new center terminal enter lazygit space && space exit enter"
      ],
      // Center Cursor
      "j": [
        "workspace::SendKeystrokes",
        "down z z"
      ],
      "k": [
        "workspace::SendKeystrokes",
        "up z z"
      ],
      // Flutter
      "space shift-f r": [
        "task::Spawn",
        {
          "task_name": "flutter run"
        }
      ]
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "q": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrevious"
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "space f f": "file_finder::Toggle"
    }
  }
]
